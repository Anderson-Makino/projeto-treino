{% extends 'base.html.twig' %}

{% block title %}Escritorio{% endblock %}

{% block body %}

    {{ block ("navbar", "navbar.html.twig") }}
    <h1>Escritorio</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Endereco</th>
                <th>Phone</th>
                <th>Descricao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for escritorio in escritorios %}
            <tr>
                <td>{{ escritorio.id }}</td>
                <td>{{ escritorio.nome }}</td>
                <td>{{ escritorio.endereco }}</td>
                <td>{{ escritorio.phone }}</td>
                <td>{{ escritorio.descricao }}</td>
                <td>
                    <a class="btnsmall" href="{{ path('app_escritorio_show', {'id': escritorio.id}) }}">Mostrar</a>
                    <a class="btnsmall" href="{{ path('app_escritorio_edit', {'id': escritorio.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class ="redirect_link btn" href="{{ path('app_escritorio_new') }}">Criar Novo</a>
{% endblock %}
