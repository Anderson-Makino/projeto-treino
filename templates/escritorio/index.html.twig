{% extends 'base-avanzu.html.twig' %}

{% block title %}Escritorio{% endblock %}

{% block page_title %} Escritorio {% endblock %}

{% block page_content %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Descrição</th>
                <th>CNPJ</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for escritorio in escritorios %}
            <tr>
                <td>{{ escritorio.id }}</td>
                <td>{{ escritorio.nome }}</td>
                <td>{{ escritorio.phone }}</td>
                <td>{{ escritorio.descricao }}</td>
                <td>{{ escritorio.cnpj }} </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_escritorio_edit', {'id': escritorio.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class =" btn btn btn-primary" href="{{ path('app_escritorio_new') }}">Criar Novo</a>
{% endblock %}
