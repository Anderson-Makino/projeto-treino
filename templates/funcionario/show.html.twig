{% extends 'base.html.twig' %}

{% block title %}Funcionario{% endblock %}

{% block body %}

    {{ block ("navbar", "navbar.html.twig") }}
    <h1>Funcionario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ funcionario.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ funcionario.nome }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ funcionario.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ funcionario.phone }}</td>
            </tr>
            <tr>
                <th>Salario</th>
                <td>{{ funcionario.salario }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ empresa.id }}</td>
            </tr>
        </tbody>
    </table>

    <a class ="redirect_link btn" href="{{ path('app_funcionario_index') }}">Retornar a Lista</a>

    <a class ="redirect_link btn" href="{{ path('app_funcionario_edit', {'id': funcionario.id}) }}">Editar</a>

    {{ include('funcionario/_delete_form.html.twig') }}
{% endblock %}
