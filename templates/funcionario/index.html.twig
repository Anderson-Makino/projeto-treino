{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block title %}Funcionario{% endblock %}

{% block navbar_messages %} {% endblock %}
{% block navbar_notifications %} {% endblock %}
{% block navbar_tasks %} {% endblock %}
{% block navbar_user %} {% endblock %}
{% block page_title %} Funcionario {% endblock %}
{% block page_subtitle %} {% endblock %}

{% block sidebar_nav %}
{{ include('admin_navbar.html.twig') }}
{% endblock %}

{% block page_content %}

    <h1>Funcionario</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Salario</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.id }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.email }}</td>
                <td>{{ funcionario.phone }}</td>
                <td>{{ funcionario.salario }}</td>
                <td>
                    <a class="btnsmall" href="{{ path('app_funcionario_show', {'id': funcionario.id}) }}">Mostrar</a>
                    <a class="btnsmall" href="{{ path('app_funcionario_edit', {'id': funcionario.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class ="redirect_link btn btnbig" href="{{ path('app_funcionario_new') }}">Criar Novo</a>
{% endblock %}
