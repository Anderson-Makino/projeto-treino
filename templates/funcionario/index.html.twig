{% extends 'base.html.twig' %}

{% block title %}Funcionario index{% endblock %}

{% block body %}
    <h1>Funcionario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Salario</th>
                <th>Company</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.id }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.email }}</td>
                <td>{{ funcionario.phone }}</td>
                <td>{{ funcionario.salario }}</td>
                <td>{{ funcionario.company }}</td>
                <td>
                    <a href="{{ path('app_funcionario_show', {'id': funcionario.id}) }}">show</a>
                    <a href="{{ path('app_funcionario_edit', {'id': funcionario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_funcionario_new') }}">Create new</a>
{% endblock %}
