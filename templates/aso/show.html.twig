{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block title %}Aso{% endblock %}

{% block navbar_messages %} {% endblock %}
{% block navbar_notifications %} {% endblock %}
{% block navbar_tasks %} {% endblock %}
{% block navbar_user %} {% endblock %}
{% block page_title %} ASO {% endblock %}
{% block page_subtitle %} {% endblock %}

{% block sidebar_nav %}
{{ include('admin_navbar.html.twig') }}
{% endblock %}

{% block page_content %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aso.id }}</td>
            </tr>
            <tr>
                <th>DtAso</th>
                <td>{{ aso.dtAso ? aso.dtAso|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ aso.tipo }}</td>
            </tr>
            <tr>
                <th>Resultado</th>
                <td>{{ aso.resultado }}</td>
            </tr>
            <tr>
                <th>Empregado</th>
                <td>{{ funcionario.nome }}</td>
            </tr>
            <tr>
                <th>Empresa</th>
                <td>{{ empresa.nome }}</td>
            </tr>
            <tr>
                <th>Medico - CRM</th>
                <td> {{ medico.nome }} - {{ medico.crm }}</td>
            </tr>
            <tr>
                <th>Medico Responsavel - CRM</th>
                <td>
                {% if medicoResponsavel %}
                    {{ medicoResponsavel.nome }} - {{ medicoResponsavel.crm }}
                {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class =" btn btn btn-primary" href="{{ path('app_aso_index') }}">Retornar a Lista</a>

    <a class =" btn btn btn-primary" href="{{ path('app_aso_edit', {'id': aso.id}) }}">edit</a>

    {{ include('aso/_delete_form.html.twig') }}
{% endblock %}
