{% extends 'base.html.twig' %}

{% block title %}Empresa{% endblock %}

{% block body %}

    {{ block ("navbar", "navbar.html.twig") }}
    <h1>Empresa</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Endereco</th>
                <th>Phone</th>
                <th>Descricao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.nome }}</td>
                <td>{{ empresa.endereco }}</td>
                <td>{{ empresa.phone }}</td>
                <td>{{ empresa.descricao }}</td>
                <td>
                    <a class="btnsmall" href="{{ path('app_empresa_show', {'id': empresa.id}) }}">Mostrar</a>
                    <a class="btnsmall" href="{{ path('app_empresa_edit', {'id': empresa.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class ="redirect_link btn" href="{{ path('app_empresa_new') }}">Criar Novo</a>
{% endblock %}
