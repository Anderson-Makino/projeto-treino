{% extends 'base.html.twig' %}

{% block title %}Empresa{% endblock %}

{% block body %}

    {{ block ("navbar", "navbar.html.twig") }}
    <h1>Empresa</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empresa.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ empresa.nome }}</td>
            </tr>
            <tr>
                <th>Endereco</th>
                <td>{{ empresa.endereco }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ empresa.phone }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ empresa.descricao }}</td>
            </tr>
        </tbody>
    </table>

    <a class ="redirect_link btn" href="{{ path('app_empresa_index') }}">Retornar a Lista</a>

    <a class ="redirect_link btn" href="{{ path('app_empresa_edit', {'id': empresa.id}) }}">Editar</a>

    {{ include('empresa/_delete_form.html.twig') }}
{% endblock %}
