{% extends '@AdminLTE/layout/default-layout.html.twig' %}


{% block title %}Empresa{% endblock %}

{% block navbar_messages %} {% endblock %}
{% block navbar_notifications %} {% endblock %}
{% block navbar_tasks %} {% endblock %}
{% block navbar_user %} {% endblock %}
{% block page_title %} Empresa {% endblock %}
{% block page_subtitle %} {% endblock %}

{% block sidebar_nav %}
{{ include('admin_navbar.html.twig') }}
{% endblock %}

{% block page_content %}

    <h1>Empresa</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empresa.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ empresa.nome }}</td>
            </tr>
            <tr>
                <th>Cep</th>
                <td>{{ empresa.cep }}</td>
            </tr>
            <tr>
                <th>Rua</th>
                <td>{{ empresa.endereco }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ empresa.numero }}</td>
            </tr>
            {% if empresa.complemento != null %}
            <tr>
                <th>complemento</th>
                <td>{{ empresa.complemento }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Bairro</th>
                <td>{{ empresa.bairro }}</td>
            </tr>
            <tr>
                <th>Cidade</th>
                <td>{{ empresa.cidade }}</td>
            </tr>
            <tr>
                <th>UF</th>
                <td>{{ empresa.uf }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ empresa.phone }}</td>
            </tr>
            {% if empresa.celular != null %}
            <tr>
                <th>Celular</th>
                <td>{{ empresa.celular }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Descricao</th>
                <td>{{ empresa.descricao }}</td>
            </tr>
            <tr>
                <th>email</th>
                <td>{{ empresa.email }}</td>
            </tr>
            <tr>
                <th>CPF Responsavel</th>
                <td>{{ empresa.cpfresponsavel }}</td>
            </tr>
        </tbody>
    </table>

    <a class ="redirect_link btn btnbig" href="{{ path('app_empresa_index') }}">Retornar a Lista</a>

    <a class ="redirect_link btn btnbig" href="{{ path('app_empresa_edit', {'id': empresa.id}) }}">Editar</a>

    {{ include('empresa/_delete_form.html.twig') }}
{% endblock %}
