{% extends 'base-avanzu.html.twig' %}

{% block title %}Medico{% endblock %}

{% block page_title %} Medico {% endblock %}

{% block page_content %}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CRM</th>
                <th>Telefone</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.nome }}</td>
                <td>{{ medico.crm }}</td>
                <td>{{ medico.phone }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_medico_edit', {'id': medico.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Nenhum Medico Encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class =" btn btn btn-primary" href="{{ path('app_medico_new') }}">Criar Novo</a>
{% endblock %}
