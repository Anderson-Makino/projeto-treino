{% extends 'base.html.twig' %}

{% block title %}Medico index{% endblock %}

{% block body %}
    <h1>Medico index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Crm</th>
                <th>Phone</th>
                <th>Company</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.nome }}</td>
                <td>{{ medico.crm }}</td>
                <td>{{ medico.phone }}</td>
                <td>{{ medico.company }}</td>
                <td>
                    <a href="{{ path('app_medico_show', {'id': medico.id}) }}">show</a>
                    <a href="{{ path('app_medico_edit', {'id': medico.id}) }}">edit</a>
                </td>
            </tr>
