{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block title %}Medico{% endblock %}

{% block navbar_messages %} {% endblock %}
{% block navbar_notifications %} {% endblock %}
{% block navbar_tasks %} {% endblock %}
{% block navbar_user %} {% endblock %}
{% block page_title %} Medico {% endblock %}
{% block page_subtitle %} {% endblock %}

{% block sidebar_nav %}
{{ include('admin_navbar.html.twig') }}
{% endblock %}

{% block page_content %}

    <h1>Medico</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Crm</th>
                <th>Telefone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.nome }}</td>
                <td>{{ medico.crm }}</td>
                <td>{{ medico.phone }}</td>
                <td>
                    <a class="btnsmall" href="{{ path('app_medico_show', {'id': medico.id}) }}">Mostrar</a>
                    <a class="btnsmall" href="{{ path('app_medico_edit', {'id': medico.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class ="redirect_link btn btnbig" href="{{ path('app_medico_new') }}">Criar Novo</a>
{% endblock %}
