{% extends 'base.html.twig' %}

{% block title %}Medico{% endblock %}

{% block body %}

    {{ block ("navbar", "navbar.html.twig") }}
    <h1>Medico</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Crm</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.nome }}</td>
                <td>{{ medico.crm }}</td>
                <td>{{ medico.phone }}</td>
                <td>
                    <a class="btnsmall" href="{{ path('app_medico_show', {'id': medico.id}) }}">Mostrar</a>
                    <a class="btnsmall" href="{{ path('app_medico_edit', {'id': medico.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class ="redirect_link btn" href="{{ path('app_medico_new') }}">Criar Novo</a>
{% endblock %}
