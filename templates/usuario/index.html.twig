{% extends 'base-avanzu.html.twig' %}

{% block title %}Usuarios{% endblock %}


{% block page_title %} Usuario {% endblock %}

{% block page_content %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome de Usuario</th> 
                <th>Email</th>
                <th>Administrador</th>
                {#<th>Password</th>#}
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.Username }}</td>
                <td>{{ usuario.email }}</td>
                {% if "ROLE_ADMIN" in usuario.roles %}
                <td>Administrador</td>
                {% else %}
                <td>Usuario comum</td>
                {% endif %}

                {#<td>{{ usuario.password }}</td>#}
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Nenhum Usuario Encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('app_register2') }}">Criar Novo</a>
{% endblock %}
