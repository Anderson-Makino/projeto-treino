{% extends '@AdminLTE/layout/default-layout.html.twig' %}
{% block title %}Registrar novo usuario{% endblock %}


{% block page_content %}

    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        {{form_row(registrationForm.cnpj)}}
        {{form_row(registrationForm.nome)}}
        {{form_row(registrationForm.username)}}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <button type="submit" class="btnbig">Register</button>
        <a href="{{ path('app_login') }}">Retornar a tela de login</a>
    {{ form_end(registrationForm) }}
{% endblock %}
