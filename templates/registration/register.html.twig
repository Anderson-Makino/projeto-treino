{% extends 'base-avanzu.html.twig' %}
{% block title %}Registrar{% endblock %}

{% block page_title %} Registrar novo usuario {% endblock %}
{% block page_subtitle %} Registro {% endblock %}

{% block page_content %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        {{form_row(registrationForm.cnpj)}}
        {{form_row(registrationForm.nome)}}
        {{form_row(registrationForm.username)}}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <button type="submit" class="btn btn-primary">Registrar</button>
        {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('app_usuario_index') }}">Retornar a tela de usuarios</a>
        {% else %}
            <a class="btn btn-primary" href="{{ path('app_login') }}">Retornar a tela de login</a>
        {% endif %}
    {{ form_end(registrationForm) }}
{% endblock %}
